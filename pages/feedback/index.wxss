page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 20rpx;
}
.fb_main .fb_content .fd_tools {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fd_tools button:not([size='mini']) {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 40rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: #b2b6b6;
  margin-bottom: 30rpx;
  background-color: #f3eded;
}
.fb_main .fb_content .fd_tools .up_img_item {
  display: flex;
}
.fb_main .form_btn_wrap {
  margin-top: 60rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button:not([size='mini']) {
  width: 100%;
  margin: 0;
  background-color: #f40;
  color: #fff;
}
